{{>header}}
        <h1>{{name}}</h1>
        <img class="cube" src="{{imageUrl}}" alt="Image loading error...">
        <div class="details">
            <p><span>Description:</span>{{description}}</p>
            <p><span>Difficulty level:</span> {{difficulty}}</p>
            <a class="btn" href="/">Back</a>
            <a class="btn" href="/edit/{{id}}">Edit</a>
            <a class="btn" href="/remove/{{id}}">Remove</a>
        </div>
        <h2>Accessories</h2>
        <div class="accessories">
            {{#each accessor}}
                <div class="accessory">
                    <img src="{{imageUrl}}" alt="stickerName">
                    <h3>{{name}}</h3>
                    <p>{{description}}</p>
                </div>
            {{else}}
                <h3 class="italic">This cube has no accessories yet...</h3>
            {{/each}}

        </div>
{{> footer}}