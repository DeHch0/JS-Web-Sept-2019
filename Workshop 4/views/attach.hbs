{{> header}}
        <h1>Attach a new accessory</h1>
        <div class="form">
            <h2>{{name}}</h2>
            <img class="cube" src="{{imageUrl}}">
            <form action='/attach/accessory/{{id}}' method="POST">
                <label for="accessory">Accessories</label>

                {{#if accessor}}
                    <select id="accessory" name="accessory">
                        {{#each accessor}}
                            <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                    <input type="submit" value="Attach">
                {{else}}
                    <h3 class="italic">This cube has all available accessories so far or there is no available at
                        all...</h3>
                {{/if}}


            </form>
            <a class="btn" href="/">Back</a>
        </div>
{{> footer}}